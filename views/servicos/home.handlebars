<div class="container">
    {{#if search}}
        <h2>Você  está buscando por: <span style="font-style: italic;">{{search}}</span></h2> 
        {{#if servicosQty}}
            <p>Foram encontrados <span>{{servicosQty}}</span> serviços</p>
        {{else}}
            <p>Nenhum servico foi encontrado para o termo: <span>{{search}}</span></p>
        {{/if}}
    {{else}}
        <h2>Encontre serviços</h2>
    {{/if}}
    <hr>
    {{#if servicos }}
    
    <form class="row g-3 justify-content-end" action="/" method="get">
        <div class="col-md-4">
            <input type="text" class="form-control" name="search" id="search" placeholder="Search..">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Pesquisar</button>
        </div>
    </form>
 
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col" style="width:40px; text-align:center;">#</th>
                <th scope="col">Serviço</th>
                <th scope="col">Usuário</th>
            </tr>
        </thead>
        <tbody>
            {{#each servicos}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>{{this.User.name}}</td>
                {{!-- <td>  
                    <form action="/servicos/remove" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <div class="d-flex gap-2 justify-content-end">
                            <button class="btn btn-danger btn-sm" type="submit">Excluir</button>
                            <a href="/servicos/edit/{{this.id}}" class="btn btn-primary btn-sm">Editar</a>
                        </div>
                    </form>
                </td> --}}
            </tr>
            {{/each}}
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
    {{else}}

      <p class="text-center"> Ainda não há nenhum serviço cadastrado, comece a criar <a href="/servicos/add">por aqui</a></p>

    {{/if}}
</div>