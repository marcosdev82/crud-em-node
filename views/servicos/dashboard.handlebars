<div class="container">
    <h2>Serviços</h2>
 
    <a class="btn btn-primary btn-sm" href="/servicos/add">Adicionar servico</a>
    <hr>
    {{#if emptyServico }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Serviço</th>
                <th scope="col" style="width: 200px; text-align:center;">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each servicos}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>  
                    <form action="/servicos/remove" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <div class="d-flex gap-2 justify-content-end">
                            <button class="btn btn-danger btn-sm" type="submit">Excluir</button>
                            <a href="/servicos/edit/{{this.id}}" class="btn btn-primary btn-sm">Editar</a>
                        </div>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
    {{else}}

      <p class="text-center"> Ainda não há nenhum serviço cadastrado, comece a criar <a href="/servicos/add">por aqui</a></p>

    {{/if}}
</div>